<?xml version="1.0" encoding="utf-8"?>
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009" 
			   xmlns:s="library://ns.adobe.com/flex/spark" 
			   xmlns:mx="library://ns.adobe.com/flex/halo" minWidth="1024" minHeight="768" xmlns:flexunit="flexunit.flexui.*"    creationComplete="onCreationComplete()" >	
<fx:Script>
	<![CDATA[

		import org.flexunit.runner.Request;
		import org.smilkit.spec.tests.ElementTestCase;

		public function currentRunTestSuite():Array
		{
			var testsToRun:Array = new Array();
			testsToRun.push(Request.method( org.smilkit.spec.tests.ElementTestCase,"creation"));
			testsToRun.push(Request.method( org.smilkit.spec.tests.ElementTestCase,"removingAttributes"));
			testsToRun.push(Request.method( org.smilkit.spec.tests.ElementTestCase,"newAttributes"));
			testsToRun.push(Request.method( org.smilkit.spec.tests.ElementTestCase,"updatingAttributes"));
			return testsToRun;
		}
		private function onCreationComplete():void
		{
			testRunner.runWithFlexUnit4Runner(currentRunTestSuite(), "smilkit-as3");
		}
]]>
</fx:Script>
<flexunit:FlexUnitTestRunnerUI id="testRunner"/>
</s:Application>
